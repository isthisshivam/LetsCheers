<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".front_page_activity"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WE BRING YOU GREAT BEER SUPER FAST"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="#FF7F00"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="And knows you'll love"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textColor="#4169e1"
                android:textSize="18dp"
                android:textStyle="normal"
                />


        </LinearLayout>


        <android.support.v7.widget.CardView

            android:id="@+id/card_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Beer needs your location"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/button_shape"
                    android:text="Detect your location"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:id="@+id/btn_detect"/>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/location_txt"
                        android:textStyle="bold"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:textAlignment="center"
                        android:text="Enter your location manually"
                        android:onClick="onClick"
                        android:textSize="13dp"
                        android:textColor="#FF4500"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="Or"/>

                    <TextView
                        android:layout_width="80dp"
                        android:textStyle="bold"
                        android:layout_height="32dp"
                        android:textSize="13dp"
                        android:textColor="#FF4500"
                        android:textAlignment="center"
                        android:layout_marginLeft="3dp"
                        android:text="Login to  use saved address"/>

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>